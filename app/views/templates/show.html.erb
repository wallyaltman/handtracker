<div class="guide">
	<span class="action"><%= link_to 'back to my games', user_url(@user) %></span><br /><br />
	<h2>Viewing template</h2>
	<%= @tpl.name %><br /><br />
</div>
<div class="object_box ">
	<div class="view">
		<% if @tpl.public %>
			This template is usable by everybody.
		<% else %>
			This template is only usable by <% if @owner %>you<% else %>the owner<% end %>.
		<% end %>
	</div>
	<div class="guide">
		<h2>Public?</h2>
		<% if @owner %>
			<% if @tpl.public %>
				<%= link_to 'make un-public', toggle_public_template_url(@tpl) %>
			<% else %>
				<%= link_to 'make public', toggle_public_template_url(@tpl) %>
			<% end %>
		<% end %>
	</div>
	<div class="view">
		<% if @tpl.auto_shuffle %>
			Decks created from this template will be shuffled automatically.
		<% else %>
			The cards in new decks created from this template will be ordered as below.
		<% end %>
	</div>
	<div class="guide">
		<h2>Auto-Shuffle?</h2>
		<% if @owner %>
			<% if @tpl.auto_shuffle %>
				<%= link_to 'unset auto-shuffle', toggle_auto_shuffle_template_url(@tpl) %>
			<% else %>
				<%= link_to 'set auto-shuffle', toggle_auto_shuffle_template_url(@tpl) %>
			<% end %>
		<% end %>
	</div>
</div>
<div class="object_box ">
	<div class="view">
		<% if @tpl.cards.empty? %>
			This template has no cards yet!
		<% else %>
			<% @tpl.cards.each do |card| %>
				<div class="card">
					<%= render :partial => 'cards/card', :object => card %> 
					<% if @owner %>
						- <%= link_to 'delete', template_card_url(@tpl, card), :confirm => 'Are you sure?', :method => :delete %> | 
						<%= link_to 'edit', edit_template_card_url(@tpl, card) %> | 
						<%= link_to 'copy', copy_template_card_url(@tpl, card) %>
					<% end %>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="guide">
		<h2>Cards</h2>
		<% if @owner %>
			<span class="action"><%= link_to 'add cards', new_template_card_url(@tpl)%>
		<% end %>
	</div>
</div>
<div class="object_box "></div>
